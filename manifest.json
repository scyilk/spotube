{
    "manifest_version": 3,
    "name": "Spotube",
    "version": "1.0",
    "description": "Find a Spotify song on YouTube! And vice versa.",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/spotify.js"
            ],
            "matches": [
                "https://open.spotify.com/playlist/*",
                "https://open.spotify.com/album/*",
                "https://open.spotify.com/track/*"
            ]
        }
    ]
}